{% extends 'layout.njk' %}

{% block head %}
  <title>Gym Manager - Members</title>
{% endblock %}

{% block content %}
  <div class="card table-container">
    <a href="/members/create">New Members</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url('{{member.avatar_url}}')"></span>
              {{ member.name }}
            </td>
            <td>{{ member.email }}</td>
            <td>{{ member.weight }} Kg</td>
            <td>{{ member.height }} cm</td>
            <td>
              <a href="/members/{{member.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}