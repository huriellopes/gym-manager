{% extends 'layout.njk' %}

{% block head %}
  <title>Gym Manager - Edit Instructor</title>
{% endblock %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url('{{ member.avatar_url }}') no-repeat center center / cover"></section>
    <section class="details">
      <form action="/members?_method=PUT" method="POST">
        <h3>Editar Member</h3>
        <input 
          type="hidden" 
          name="id" 
          value="{{ member.id }}" />
        {% include 'members/fields.njk' %}
      </form>

      <form id="form-delete" action="/members?_method=DELETE" method="POST">
        <input 
          type="hidden" 
          name="id" 
          value="{{ member.id }}" />
        <button type="submit">Deletar</button>
      </form>
    </section>
  </div>

  <script>
    const formDeletar = document.querySelector('#form-delete')
    formDeletar.addEventListener('submit', (event) => {
      const confirmation = confirm('Deseja Deletar?')

      if (!confirmation) {
        event.preventDefault()
      }
    })
  </script>

{% endblock %}